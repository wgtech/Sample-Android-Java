<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">@color/gray</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppToolbar" parent="Theme.AppCompat.NoActionBar">

    </style>

    <!-- FullScreen Only -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- DetailActivity -->
    <style name="DetailStyle" parent="FullScreenTheme">
        <item name="android:background">@color/white</item>
    </style>

    <!-- SplashActivity (<- DetailStyle) -->
    <style name="SplashStyle" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>

    <!-- Toolbar Font -->
    <style name="toolbar_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:typeface">@font/font</item>
        <item name="android:textColor">@color/black</item>
    </style>




</resources>
